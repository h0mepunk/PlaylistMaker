<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="@dimen/header_height">
        <Button
            android:id="@+id/search_button"
            android:layout_width="48dp"
            android:layout_height="fill_parent"
            android:textColor="@color/dark_text"
            android:backgroundTint="@color/white"
            android:padding="@dimen/button_padding"
            android:text="@string/search_title"
            android:drawableLeft="@drawable/arrow_back"
            android:textSize="@dimen/primary_text_size"/>
        <TextView
            android:text="@string/settings_title"
            android:layout_marginTop="@dimen/header_text_margin_top"
            android:layout_marginStart="@dimen/header_text_margin_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/background_color"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/primary_text_size"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="@string/dark_theme_menu"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/primary_text_size" />
            <Switch
                android:layout_marginTop="@dimen/header_text_margin_top"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="@string/share_menu"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/primary_text_size" />
            <ImageView
                android:layout_width="24dp"
                android:layout_gravity="end"
                android:src="@drawable/share"
                android:layout_height="24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="@string/support_menu"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/primary_text_size" />
            <ImageView
                android:layout_width="24dp"
                android:layout_gravity="end"
                android:src="@drawable/support"
                android:layout_height="24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="@string/user_agreement_menu"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/primary_text_size" />
            <ImageView
                android:layout_width="24dp"
                android:layout_gravity="end"
                android:src="@drawable/arrow_forward"
                android:layout_height="24dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>